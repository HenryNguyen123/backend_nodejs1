    <!-- import css -->
     <link rel="stylesheet" href="../css/clientHome.css">
</head>
    
    <div class="container">
        <h1>Create User:</h1>
        <div class="row">
            <div class="user-form mb-3 mt-3 col-6">
                <form action="/edit-user" method="post">
                    <div class="mb-3 div-none">
                        <input type="text" name="id" value="<%= user ? user.id : ''  %>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="email" name="email" value="<%= user ? user.email : ''  %>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <!-- <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1">
                    </div> -->
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" value="<%= user ? user.name : ''  %>" class="form-control" id="name">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">UserName</label>
                        <input type="text" name="userName" value="<%= user ? user.userName : ''  %>" class="form-control" id="name">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">GroupId</label>
                        <input type="text" name="groupId" value="<%= user ? user.groupId : ''  %>" class="form-control" id="name">
                    </div>
